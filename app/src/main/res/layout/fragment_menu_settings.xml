<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btnLinkNew"
        android:layout_width="263dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Link New Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Remove an Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLinkNew" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteAccount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Mute application"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:typeface="normal" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Allow Notifications"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:typeface="normal" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Download on WiFi only"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnGenDemoTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Example Trans"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Goals"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Transactions"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Tags"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteCategorized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uncategorize Transactions"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnUpdateNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Transactions"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteDatabase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Database"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnRandomTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Random Transaction"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>